@model List<Card>
<link type="text/css" rel="stylesheet" href="/css/Custom/Index.css" />

@{
    ViewData["Title"] = "Home Page";
}

<div class="row text-center" >
    <h1>WAR!</h1>
    <h5>(Select A Game Mode To Begin)</h5>
</div>


<div style="display: flex; justify-content: space-evenly; align-items: center; cursor: pointer;" >

    <div style="width: 300px; height: 200px;">
        <img src="~/gif/swordFightOne.gif" alt="PlayerVsComputer" width="100%" height="100%" />
        <h4 class="">Player Vs Player</h4>
    </div>
    <br />
    <a asp-area="" asp-controller="PlayerVsComputer" asp-action="Index">
        <div style="width: 300px; height: 200px; cursor: pointer;">
            <img src="~/gif/swordFightComputer.gif" alt="PlayerVsComputer" width="100%" height="100%" />
            <h4 style="float: right;">Player Vs Computer</h4>
        </div>
    </a>

    <div id="Testing Spot" style="width: 300px;">
        <img src="@Model[26].cardImage" Style="width: 100%; height: 100%; border-radius: 25px;" />
    </div>
</div>


